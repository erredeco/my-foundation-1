{

	"paths":{
		"bckdir": "./BCK/",
		"deploydir":"<%=paths.deploydir%>",
		"destinationdir":"./dist/",
		"sourcedir": "./source/"
	},

	"//":"configuration for the assemble task",
	"assemble":{
		"datadir":"./source/Data/",
		"templatesdir":"./source/Templates/"
	},	

	"//":"configuration for the connect task",
	"connect":{
		"port":"8090",
		"host":"localhost"
	},

	"//":"configuration for the imagemin task",
	"imagemin":{
		"optimizationLevel":3
	},

	"//":"configuration for the modernizr task",
	"modernizr":{
		"uglify": true
	},

	"//":"configuration for the postcss task",
	"postcss":{
		"autoprefixer":["last 2 versions", "ie >= 9", "and_chr >= 2.3"],
    "//":"Possible values for `optimizationLevel`: `0`(disabled),`1`,`2`(maximum, includes rules reordering)",
    "optimizationLevel":2 
	},

	"//":"configuration for the sass task",
	"sass":{
		"//":"Possible values for `sassOutputStyle` : `nested`, `expanded`, `compact`, `compressed`.",
		"outputStyle":"expanded",
		"sourceMap": true,
    	"sourceComments":true
	},
	"//":"configuration for the uglify task",
	"uglify":{
        "preserveComments": false,
        "compress": true,
        "beautify": false		
	}
}